# API runtime
APP_ENV=production
NODE_ENV=production
API_PORT=3000
WEB_PORT=443
WEB_ORIGIN=https://app.example.com
CORS_ORIGIN=https://app.example.com

# Auth
JWT_SECRET=CHANGE_ME_STRONG_RANDOM_SECRET
JWT_ACCESS_EXPIRES_IN=15m
AUTH_COOKIE_SECURE=true
AUTH_REFRESH_COOKIE_SECURE=true
# Если API доступен через nginx-префикс /api, cookie path должен совпадать.
AUTH_REFRESH_COOKIE_PATH=/api/auth
AUTH_REFRESH_EXPIRES_IN_DAYS=14

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=continuum
POSTGRES_USER=continuum
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD
DATABASE_URL=postgresql://continuum:CHANGE_ME_DB_PASSWORD@postgres:5432/continuum

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Object storage (production: external S3 provider, e.g. Beget S3)
S3_ENDPOINT=CHANGE_ME_S3_ENDPOINT
S3_REGION=us-east-1
S3_BUCKET=continuum
S3_ACCESS_KEY_ID=CHANGE_ME_S3_ACCESS_KEY_ID
S3_SECRET_ACCESS_KEY=CHANGE_ME_S3_SECRET_ACCESS_KEY
S3_FORCE_PATH_STYLE=false
# Public HTTPS base URL used in presigned URLs.
# Example: https://s3.beget.com
S3_PUBLIC_BASE_URL=CHANGE_ME_S3_PUBLIC_BASE_URL

# Worker internal auth
WORKER_INTERNAL_TOKEN=CHANGE_ME_WORKER_INTERNAL_TOKEN
