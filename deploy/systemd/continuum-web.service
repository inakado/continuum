[Unit]
Description=Continuum Next.js frontend
After=network.target

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/srv/continuum
Environment=NODE_ENV=production
Environment=PORT=3001
Environment=HOSTNAME=127.0.0.1
Environment=NEXT_PUBLIC_API_BASE_URL=/api
ExecStart=/usr/bin/env pnpm --filter web start --hostname 127.0.0.1 --port 3001
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
